<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorredoresF1.View.DriverView"
             >
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#254d4e" Padding="24" >
                <Label Text="Bienvenido" HorizontalOptions="Center" TextColor="White"/>
            </Frame>
            <Label Text="Registrar corredor" FontSize="Title" />
            <Entry Placeholder="Nombre" Text="{Binding Name}"/>
            <Entry Placeholder="Número" Text="{Binding Number}"/>
            <Entry Placeholder="Equipo" Text="{Binding Team}"/>
            <Button Text="Registrar" Command="{Binding InsertarCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>